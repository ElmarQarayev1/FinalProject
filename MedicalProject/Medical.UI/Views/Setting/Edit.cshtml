@model SettingEditRequest
@{
    ViewData["Title"] = "Edit Setting";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Setting</h1>
        <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Edit Setting Details</h6>
                </div>
                <div class="card-body">
                    <form class="user" asp-action="Edit" asp-route-key="@ViewBag.Key" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label for="noInput">
                                <i class="fas fa-cog"></i> Setting Value
                            </label>
                            <input asp-for="Value" class="form-control" id="noInput" placeholder="Enter setting value" style="background-color:white;" />
                            <span class="text-danger" asp-validation-for="Value"></span>
                        </div>

                        <button class="btn btn-primary btn-block mt-4" type="submit">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
